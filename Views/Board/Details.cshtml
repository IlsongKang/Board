@model BoardProject.Models.Board

@{
    ViewData["Title"] = "상세 보기";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@Model.Title</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col">
                    <small class="text-muted">
                        작성자: @Model.Author | 
                        작성일: @Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <span>| 수정일: @Model.UpdatedAt.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</span>
                        }
                    </small>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p class="card-text" style="white-space: pre-wrap;">@Model.Content</p>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">수정</a>
                <a asp-action="Index" class="btn btn-secondary">목록으로</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">삭제</a>
            </div>
        </div>
    </div>
</div> 